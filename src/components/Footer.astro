---
const today = new Date();
---

<footer>
	<div class="container">
		<div class="footer-content">
			<div class="footer-info">
				<p class="copyright">
					&copy; {today.getFullYear()} Railway Platform Guide. All rights reserved.
				</p>
				<p class="disclosure">
					This site contains affiliate links. We may earn a commission when you sign up for Railway through our links.
				</p>
			</div>
			<div class="footer-links">
				<a href="https://railway.com/?referralCode=RRANX" target="_blank" rel="noopener" aria-label="Visit Railway">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
						<path d="M13.5 2L2 13.5L10.5 22L22 10.5L13.5 2ZM12 16C10.9 16 10 15.1 10 14C10 12.9 10.9 12 12 12C13.1 12 14 12.9 14 14C14 15.1 13.1 16 12 16Z"/>
					</svg>
				</a>
			</div>
		</div>
	</div>
</footer>

<style>
	footer {
		background: var(--color-bg-secondary);
		border-top: 1px solid var(--color-border);
		padding: var(--space-16) 0;
		margin-top: 0; /* No margin since sections handle spacing */
	}

	.footer-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: var(--space-8);
	}

	.footer-info {
		flex: 1;
	}

	.copyright {
		color: var(--color-text);
		margin-bottom: var(--space-2);
		font-weight: 500;
	}

	.disclosure {
		color: var(--color-text-muted);
		font-size: var(--text-sm);
		margin: 0;
		line-height: var(--leading-relaxed);
	}

	.footer-links {
		display: flex;
		gap: var(--space-4);
		align-items: center;
	}

	.footer-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 44px;
		height: 44px;
		color: var(--color-text-muted);
		background: var(--color-surface);
		border: 1px solid var(--color-border);
		border-radius: var(--radius);
		transition: all var(--transition-fast);
		text-decoration: none;
	}

	.footer-links a:hover {
		color: var(--color-primary);
		background: var(--color-surface-hover);
		border-color: var(--color-primary);
		transform: translateY(-2px);
		box-shadow: var(--shadow-sm);
		text-decoration: none;
	}

	/* Mobile responsive */
	@media (max-width: 768px) {
		.footer-content {
			flex-direction: column;
			text-align: center;
			gap: var(--space-6);
		}

		.footer-info {
			order: 2;
		}

		.footer-links {
			order: 1;
		}
	}

	@media (max-width: 640px) {
		footer {
			padding: var(--space-12) 0;
		}

		.disclosure {
			font-size: var(--text-xs);
		}
	}
</style>
