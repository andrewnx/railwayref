---
const today = new Date();
---

<footer>
	<div class="container">
		<div class="footer-content">
			<div class="footer-info">
				<p class="copyright">
					&copy; {today.getFullYear()} Railway Platform Guide. All rights reserved.
				</p>
				<p class="disclosure">
					This site contains affiliate links. We may earn a commission when you sign up for Railway through our links.
				</p>
			</div>
			<div class="footer-links">
				<a href="https://railway.app" target="_blank" rel="noopener" aria-label="Visit Railway">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
						<path d="M13.5 2L2 13.5L10.5 22L22 10.5L13.5 2ZM12 16C10.9 16 10 15.1 10 14C10 12.9 10.9 12 12 12C13.1 12 14 12.9 14 14C14 15.1 13.1 16 12 16Z"/>
					</svg>
				</a>
				<a href="https://github.com/andrewnx/railwayref" target="_blank" rel="noopener" aria-label="View source on GitHub">
					<svg width="24" height="24" viewBox="0 0 16 16" fill="currentColor">
						<path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
					</svg>
				</a>
			</div>
		</div>
	</div>
</footer>

<style>
	footer {
		background: var(--color-bg-secondary);
		border-top: 1px solid var(--color-border);
		padding: var(--space-16) 0;
		margin-top: var(--space-32);
	}

	.footer-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: var(--space-8);
	}

	.footer-info {
		flex: 1;
	}

	.copyright {
		color: var(--color-text);
		margin-bottom: var(--space-2);
		font-weight: 500;
	}

	.disclosure {
		color: var(--color-text-muted);
		font-size: var(--text-sm);
		margin: 0;
		line-height: var(--leading-relaxed);
	}

	.footer-links {
		display: flex;
		gap: var(--space-4);
		align-items: center;
	}

	.footer-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 44px;
		height: 44px;
		color: var(--color-text-muted);
		background: var(--color-surface);
		border: 1px solid var(--color-border);
		border-radius: var(--radius);
		transition: all var(--transition-fast);
		text-decoration: none;
	}

	.footer-links a:hover {
		color: var(--color-primary);
		background: var(--color-surface-hover);
		border-color: var(--color-primary);
		transform: translateY(-2px);
		box-shadow: var(--shadow-sm);
		text-decoration: none;
	}

	/* Mobile responsive */
	@media (max-width: 768px) {
		.footer-content {
			flex-direction: column;
			text-align: center;
			gap: var(--space-6);
		}

		.footer-info {
			order: 2;
		}

		.footer-links {
			order: 1;
		}
	}

	@media (max-width: 640px) {
		footer {
			padding: var(--space-12) 0;
		}

		.disclosure {
			font-size: var(--text-xs);
		}
	}
</style>
